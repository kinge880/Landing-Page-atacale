files:
    /usr/local/bin/sendemail_script.sh:
        mode: "000755"
        owner: root
        group: root
        content: |
            #!/bin/bash
            export $(cat /opt/elasticbeanstalk/deployment/env | xargs)
            source $PYTHONPATH/activate
            python3 /var/app/current/manage.py send_mail >> ~/cron_mail.log 2>&1

    /usr/local/bin/sendemailerror_script.sh:
        mode: "000755"
        owner: root
        group: root
        content: |
            #!/bin/bash
            export $(cat /opt/elasticbeanstalk/deployment/env | xargs)
            source $PYTHONPATH/activate
            python3 /var/app/current/manage.py send_mail retry_deferred >> ~/cron_mail_deferred.log 2>&1


    /etc/cron.d/my_cron:
        mode: "000644"
        owner: root
        group: root
        content: |
            1 * * * * root /usr/local/bin/sendemail_script.sh >> /var/log/my_cron.log 2>&1
    
    /etc/cron.d/my_cron:
        mode: "000644"
        owner: root
        group: root
        content: |
            5 * * * * root /usr/local/bin/sendemailerror_script.sh >> /var/log/my_cron.log 2>&1

commands:
  rm_old_cron:
    command: "rm -fr /etc/cron.d/*.bak"
    ignoreErrors: true