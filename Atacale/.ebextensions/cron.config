files:
    /usr/local/bin/sendemail_script.sh:
        mode: "000755"
        owner: root
        group: root
        content: |
            #!/bin/bash
            source /var/app/venv/staging-LQM1lest/bin/activate
            source var/app/current/python manage.py send_mail

    /usr/local/bin/sendemailerror_script.sh:
        mode: "000755"
        owner: root
        group: root
        content: |
            #!/bin/bash
            source /var/app/venv/staging-LQM1lest/bin/activate
            source var/app/current/python manage.py send_mail retry_deferred


    /etc/cron.d/my_cron:
        mode: "000644"
        owner: root
        group: root
        content: |
            1 * * * * root /usr/local/bin/sendemail_script.sh
    
    /etc/cron.d/my_cron:
        mode: "000644"
        owner: root
        group: root
        content: |
            5 * * * * root /usr/local/bin/sendemailerror_script.sh

commands:
  rm_old_cron:
    command: "rm -fr /etc/cron.d/*.bak"
    ignoreErrors: true